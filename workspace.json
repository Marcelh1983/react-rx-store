{
  "version": 2,
  "cli": { "defaultCollection": "@nrwl/react" },
  "defaultProject": "example",
  "generators": {
    "@nrwl/react": {
      "application": { "style": "scss", "linter": "eslint", "babel": true },
      "component": { "style": "scss" },
      "library": { "style": "scss", "linter": "eslint" }
    }
  },
  "projects": {
    "example": {
      "root": "apps/example",
      "sourceRoot": "apps/example/src",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/web:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/apps/example",
            "index": "apps/example/src/index.html",
            "main": "apps/example/src/main.tsx",
            "polyfills": "apps/example/src/polyfills.ts",
            "tsConfig": "apps/example/tsconfig.app.json",
            "assets": [
              "apps/example/src/favicon.ico",
              "apps/example/src/assets"
            ],
            "styles": ["apps/example/src/styles.scss"],
            "scripts": [],
            "webpackConfig": "@nrwl/react/plugins/webpack"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/example/src/environments/environment.ts",
                  "with": "apps/example/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/web:dev-server",
          "options": { "buildTarget": "example:build" },
          "configurations": {
            "production": { "buildTarget": "example:build:production" }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/example/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/example"],
          "options": {
            "jestConfig": "apps/example/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "rx-basic-store": {
      "root": "libs/rx-basic-store",
      "sourceRoot": "libs/rx-basic-store/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["libs/rx-basic-store/**/*.ts"] }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/rx-basic-store"],
          "options": {
            "jestConfig": "libs/rx-basic-store/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",                          
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",                     
    "noEmitOnError": true,
    "lib": ["es2017","DOM"],                            
    "strict": true,  
    "esModuleInterop": false,                 
    "outDir": "../../dist/lib",
    "declarationDir": "",
    "rootDirs": ["src", "../rx-basic-store"],
  },
  "include": [
    "**/*.ts"
  ],
}

